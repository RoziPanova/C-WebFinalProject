@using static AspNetCoreArchTemplate.GCommon.ApplicationConstants
@model IEnumerable<AspNetCoreArchTemplate.Web.ViewModels.Admin.Products.ProductManagementIndexViewModel>

@{
    ViewData["Title"] = "Manage Products";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Product Management</h2>
        <a asp-controller="ProductManagement" asp-action="Create" asp-area="Admin" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <img src="@product.ImageUrl" alt="Product Image" width="80" height="80" class="rounded shadow-sm" />
                    </td>
                    <td>@product.Name</td>
                    <td>$@product.Price.ToString(PriceFormat)</td>
                    <td>@product.CategoryName</td>
                    <td>
                        @if (product.IsDeleted == false)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td class="d-flex gap-2">

                        <form asp-controller="ProductManagement" asp-action="Edit" asp-area="Admin" method="get">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn btn-success">Edit</button>
                        </form>


                        <form asp-controller="ProductManagement" asp-action="Delete" asp-area="Admin" name="productId" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                            }
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash3"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
