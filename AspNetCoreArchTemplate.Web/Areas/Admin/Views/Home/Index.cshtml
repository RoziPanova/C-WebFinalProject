@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Admin Dashboard</h2>

    <div class="row">
        <!-- Manage Users -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View, edit, or remove registered users.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-outline-primary">Go to Users</a>
                </div>
            </div>
        </div>

        <!-- Manage Products -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-4 text-success mb-3"></i>
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text">Add, edit, or delete products in the store.</p>
                    <a asp-area="Admin" asp-controller="ProductManagement" asp-action="Index" class="btn btn-outline-success">Go to Products</a>
                </div>
            </div>
        </div>

        <!-- Manage Orders -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-cart-check-fill display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Manage Orders</h5>
                    <p class="card-text">Review and process customer orders.</p>
                    <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Index" class="btn btn-outline-warning">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
