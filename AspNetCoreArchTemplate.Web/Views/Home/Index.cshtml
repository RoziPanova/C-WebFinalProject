@{
    ViewData["Title"] = "Welcome";
}
<style>
    body {
        background-image: url("https://images.unsplash.com/photo-1589244159943-460088ed5c92?q=80&w=890&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"); /* Replace with correct path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
    }

    .welcome-container {
        background-color: rgba(92, 64, 51, 0.85); /* Bootstrap brown-ish + transparency */
        color: white;
        padding: 3rem;
        border-radius: 1rem;
    }

    .btn-outline-light:hover {
        color: #5c4033;
        background-color: #ffffff;
        border-color: #ffffff;
    }
</style>


<div style="min-height:75%" class="d-flex justify-content-center align-items-center">
    <div class="welcome-container text-center">
        <h1 style="color:white" class="display-4 fw-light ">Welcome to Our Flower Boutique</h1>
        <p class="lead">Where beauty blooms with every petal.</p>
        <div class="mt-4">
            <a asp-controller="Bouquet" asp-action="Index" class="btn btn-outline-light me-2">Browse Flowers</a>
            <a asp-controller="CustomOrder" asp-action="Create" class="btn btn-outline-light">Make Your Own</a>
        </div>
    </div>
</div>